FROM golang:1.22-alpine AS build
WORKDIR /src
COPY go.mod ./
COPY go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -trimpath -ldflags "-s -w" -o /out/ai-cs-api ./cmd/aics

FROM gcr.io/distroless/static-debian12
COPY --from=build /out/ai-cs-api /ai-cs-api
EXPOSE 8080
ENV ADDR=":8080"
ENTRYPOINT ["/ai-cs-api"]
